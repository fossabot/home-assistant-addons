{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "commitMessagePrefix": "‚è´",
  "commitMessageTopic": "{{depName}}",

  "includePaths": [
    "romm/**",
    "profilarr/**",
    "cleanuparr/**"
  ],

  "customManagers": [
    {
      "customType": "regex",
      "description": "Extract addon version and Docker image from config.yaml using combination strategy",
      "managerFilePatterns": ["*/config.yaml"],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "version:\\s+\\\"?(?<currentValue>[\\d.]+)\\\"?\\s*#\\s*(?<datasource>docker|github):(?<depName>[^\\s]+)"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}docker{{/if}}",
      "versioningTemplate": "docker"
    }
  ],

  "packageRules": [
    {
      "description": "Automerge minor and patch updates for addon applications",
      "matchUpdateTypes": ["minor", "patch"],
      "matchFileNames": ["*/config.yaml"],
      "automerge": true
    },
    {
      "description": "Require approval for major addon updates",
      "dependencyDashboardApproval": true,
      "matchUpdateTypes": ["major"],
      "matchFileNames": ["*/config.yaml"],
      "labels": ["UPDATE-MAJOR"]
    },
    {
      "description": "Use semver versioning for GitHub releases",
      "matchDatasources": ["github-releases"],
      "versioning": "semver"
    },
    {
      "description": "Group Home Assistant base image updates",
      "groupName": "Home Assistant base images",
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["^(?:ghcr\\.io/)?home-assistant/(?:aarch64|amd64|armv7|armhf|i386)-base$"]
    }
  ]
}
