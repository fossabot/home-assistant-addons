{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "labels": ["dependencies", "no-stale"],
  "commitMessagePrefix": "⬆️",
  "commitMessageTopic": "{{depName}}",
  "customManagers": [
    {
      "customType": "regex",
      "description": "Extract upstream app versions from config.yaml",
      "managerFilePatterns": ["**/config.yaml"],
      "matchStrings": [
        "^version:\\s*[\"']?(?<currentValue>[\\d.]+)[\"']?\\s*#\\s*docker:(?<depName>[^\\s]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver",
      "autoReplaceStringTemplate": "version: \"{{{newValue}}}\" # docker:{{{depName}}}"
    }
  ],
  "packageRules": [
    {
      "description": "Group base image updates",
      "groupName": "Add-on base image",
      "matchDatasources": ["docker"],
      "matchFileNames": ["**/Dockerfile", "**/build.yaml"]
    },
    {
      "description": "Automerge patch updates for base images",
      "groupName": "Add-on base image",
      "matchDatasources": ["docker"],
      "matchFileNames": ["**/Dockerfile", "**/build.yaml"],
      "matchUpdateTypes": ["patch"],
      "automerge": false
    },
    {
      "description": "Group upstream app version updates",
      "groupName": "Upstream app version",
      "matchDatasources": ["docker"],
      "matchFileNames": ["**/config.yaml"],
      "automerge": false,
      "addLabels": ["upstream-version"]
    }
  ]
}