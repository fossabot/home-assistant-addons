{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "commitMessagePrefix": "‚è´",
  "commitMessageTopic": "{{depName}}",
  "customManagers": [
    {
      "customType": "regex",
      "description": "Extract base images from Home Assistant addon build.yaml files",
      "managerFilePatterns": ["**/build.yaml"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "(aarch64|amd64|armhf|armv7|i386):\\s[\\\"']?(?<depName>.*?):(?<currentValue>.*?)[\\\"']?\\s"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "Extract base images from Dockerfile BUILD_FROM ARG",
      "managerFilePatterns": ["**/Dockerfile"],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "ARG BUILD_FROM=(?<depName>.*?):(?<currentValue>.*?)\\\\s+"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "dependencyDashboardApproval": true,
      "matchUpdateTypes": ["major"],
      "labels": ["UPDATE-MAJOR"]
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "description": "Group Home Assistant base image updates together",
      "groupName": "Home Assistant base images",
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["^(?:ghcr\\.io/)?home-assistant/(?:aarch64|amd64|armv7|armhf|i386)-base$"]
    },
    {
      "description": "Group hassio-addons debian base image updates",
      "groupName": "Home Assistant debian-base images",
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["^(?:ghcr\\.io/)?hassio-addons/debian-base/.*$"]
    }
  ]
}
