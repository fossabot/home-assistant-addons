# Application Configuration
# Generated from add-on options

server:
  host: {{ getenv "APP_HOST" "0.0.0.0" }}
  port: {{ getenv "APP_PORT" "8080" }}

logging:
  level: {{ getenv "APP_LOG_LEVEL" "info" }}
  format: "json"

storage:
  path: "/data/myapp"
  retention: {{ getenv "APP_RETENTION" "7d" }}

features:
  metrics: true
  health_check: true
